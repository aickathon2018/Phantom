extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h2
      i.fas.fa-upload.fa-sm
      | Garment Search

  h3 Garment Search Form
  .row
    .col-md-6
      p Upload your current image to get a recommendation from our database!
      form(role='form', enctype='multipart/form-data', method='POST')
        .form-group
          label.col-form-label.font-weight-bold File Input
          .col-md-6
            input(type='file' name='searchImage')
        button.btn.btn-primary(type='submit') Submit

  h3 Search Results
  table.table.table-condensed
    thead
      tr
        th Sample Image
        th Original Name
        th Colors Identified
        th Styles Identified
        th Garments Identified
    tbody
      each doc in docs
        tr
          if doc.path
            td
              img(src='/' + doc.path style='width:300px;height:400px;')
          else
            td= ''
          td= doc.originalname
          td= doc.colors
          td= doc.styles
          td= doc.garments
